# Environment configuration for honey-duck Dagster pipeline
# Copy to .env and update with your values

# ============================================================================
# Local Development
# ============================================================================

# Dagster home directory (for local uv run dagster dev)
# Example: DAGSTER_HOME=/Users/yourname/git/honey-duck/dagster_home
# Without this, run history is stored in a temporary directory
DAGSTER_HOME=/path/to/honey-duck/dagster_home

# ============================================================================
# Docker Deployment (Production)
# ============================================================================

# PostgreSQL Database
DAGSTER_POSTGRES_USER=dagster
DAGSTER_POSTGRES_PASSWORD=your_secure_password_here_change_this
DAGSTER_POSTGRES_DB=dagster
DAGSTER_POSTGRES_HOSTNAME=dagster-postgres
DAGSTER_POSTGRES_PORT=5432

# ============================================================================
# Optional Integrations
# ============================================================================

# Elasticsearch
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_API_KEY=

# OpenSearch (AWS)
OPENSEARCH_HOST=https://search-domain.us-east-1.es.amazonaws.com
OPENSEARCH_REGION=us-east-1

# API Keys for Bulk Harvesters
ANTHROPIC_API_KEY=sk-ant-
VOYAGE_API_KEY=pa-

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
